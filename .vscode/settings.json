{
  "files.eol": "\n",
  "editor.tabSize": 4,
  "files.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/venv": true,
  },
  "files.associations": {
    ".env*": "dotenv",
    "*.html": "django-html",
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "search.exclude": {
    ".vscode": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.min.js": true,
    "static": true,
    "**/venv": true,
  },
  "python.analysis.typeCheckingMode": "off",
  "files.trimTrailingWhitespace": true,
  "pylint.args": ["--load-plugins=pylint_django", " --django-settings-module=project.settings"],
}